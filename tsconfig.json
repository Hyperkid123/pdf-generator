{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "allowJs": true,
      "jsx": "react",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "lib": ["es2015", "dom"],
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "server/**/*",
      "tests-visual-regression/**/*",
      "templates/**/*",
      "node_modules/@types/puppeteer/index.d.ts"
  ]
}
